<% if user_signed_in? %>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= current_user.email %>
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to 'Edit User', edit_user_registration_path, class: 'dropdown-item'%>
      </li>
      <li><hr class="dropdown-divider"></li>
      <li>
        <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'dropdown-item' %>
      </li>
    </ul>
  </div>
<% else %>
  <%= link_to 'Sign In', new_user_session_path, class: 'link-secondary'%>&nbsp;&nbsp;
  <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-sm btn-outline-secondary'%>
<% end %>
